// https://code.visualstudio.com/docs/editor/tasks#_custom-tasks

{
  "version": "2.0.0",
  "tasks": [
    {
      "label"   : "Compilar y ejecutar",
      "type"    : "shell",
      "command" : "make",
      "group"   : 
      {
        "kind"      : "build",
        "isDefault" : true
      },
      "problemMatcher" : "$gcc",
      "presentation" : 
      {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label"   : "Compilar si es necesario",
      "type"    : "shell",
      "command" : "make ./bin/main_exe",
      "group"   : 
      {
        "kind"      : "build",
        "isDefault" : false
      },
      "problemMatcher" : "$gcc",
      "presentation" : 
      {
        "reveal" : "always",
        "panel"  : "new"
      }
    },
    {
      "label"   : "Limpiar y Compilar",
      "type"    : "shell",
      "command" : "make clean ; make ./bin/main_exe",
      "group"   : 
      {
        "kind"      : "build",
        "isDefault" : false
      },
      "problemMatcher" : "$gcc",
      "presentation" : 
      {
        "reveal" : "always",
        "panel"  : "new"
      }
    },
    {
      "label"   : "Ejecutar",
      "type"    : "shell",
      "command" : "./bin/main_exe",
      "group"   : 
      { "kind"      : "test",
        "isDefault" : true
      },
      "presentation": 
      { "reveal" : "always",
        "panel"  : "new"
      }
    },
    {
      "label"   : "Limpiar",
      "type"    : "shell",
      "command" : "make clean",
      "group"   : 
      { "kind"      : "build",
        "isDefault" : false
      },
      "presentation" : 
      { "reveal": "always",
        "panel": "new"
      }
    }
  ]    
}
